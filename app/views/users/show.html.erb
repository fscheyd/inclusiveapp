
<h3> <%= link_to "Businesses", businesses_path%></h3>

<h1><center> All of <%= @user.username.capitalize %>'s Reviews! </center></h1>

<% @user.reviews.each do |review| %>
    <ul>
        <li>
            <h3><%= review.title%></h3>
            <p>
            <%= review.business.name%>
            <p>
            <%= review.content %>
            <p>
            <small><%= review.created_at %></small>
        </li>
        ----------------------------------------------
    </ul>
<% end %>
<h3> <%= link_to "New Review", new_user_review_path(current_user) %></h3>

<div><h4> <%= link_to "Log out", logout_path %> </h4></div>
